{
  "manifest_version": 3,
  "name": "New-Snippets",
  "version": "1.0.0",
  "description": "A modern, synchronized browser extension for managing code snippets",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "New-Snippets"
  },
  "background": {
    "service_worker": "service_worker.js"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
